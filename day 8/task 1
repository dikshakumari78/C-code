#include <iostream>

template<typename T>
T findMinimum(T arr[], int n)
{
    T min = arr[0];
    for(int i = 1; i<n; i++)
    {
        if(arr[i]<min){
            min=arr[i];
        }
    }
    return min;
}
int main(){
    int intArray[]={7,4,3,2,1};
    double doubleArray[]={4.5,2.3,1.4,3.2};
    char charArray[]={'d','i','k','s','h','a'};
    try {
        int minInt = findMinimum(intArray,5);
        std::cout<<"Minimum element in intArray: "<<minInt<<std::endl;
        double minDouble= findMinimum(doubleArray, 4);
        std::cout<<"Minimum element in doubleArray: "<<minDouble<<std::endl;
        char minChar= findMinimum(charArray ,6);
        std::cout<<"Minimum element in charArray: "<<minChar<<std::endl;
}
catch (const std::invalid_argument& e)
{
    std::cerr<<"error: "<<e.what()<<std::endl;
}
return 0;
}
