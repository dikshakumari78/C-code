#include <iostream>

using namespace std;

// Function to print all elements of an array given a pointer and size
void printArray(int* arr, int size) {
    for (int i = 0; i < size; ++i) {
        cout << arr[i] << " ";
    }
    cout << endl;
}

int main() {
    const int SIZE = 5;
    int arr[SIZE] = {10, 20, 30, 40, 50};  // Array of integers

    // Print array elements using the printArray function
    cout << "Array elements:" << endl;
    printArray(arr, SIZE);

    return 0;
}
